<!DOCTYPE html>
<html>
  <head>
    <title>ЯЖБать</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

<body>


 <div class="container">
   <nav class="navbar navbar-expand-lg navbar-dark bg-primary" role="navigation">
    <a class="navbar-brand" href="#">
     <img src="https://cdn.svgporn.com/logos/github-icon.svg" width="30" height="30" class="d-inline-block align-top" alt="">
     #ЯЖБать!</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="<%= posts_path %>">Статьи</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Контакты</a>
        </li>
       </ul>
          <%= link_to 'Новая статья', new_post_path, class: 'btn btn-outline-light float-right' %>
    </div>
   </nav>
 </div>
  
   <div class="container main">
    <div class="row">
     <div class="col-md-12">
      <% flash.each do |name, message| %>
       <div class="alert alert-<%= name %>">
        <%= message %>
       </div>
      <% end %>
     </div>
    </div>

    <%= yield %>
   </div>

  </body>
</html>
